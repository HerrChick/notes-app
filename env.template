###############################################################################
# Environment variables template
#
# Copy this file to `.env` in the repo root and edit values.
###############################################################################

# Required (auth sessions)
# Generate a strong secret, e.g.:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=dev-secret-change-me

# Optional: API port for local dev
PORT=8787

# Optional: Database connection for hosted deployments (Turso/libSQL)
# Leave unset locally to use the default local file DB: file:./local.db
#
# DATABASE_URL=libsql://YOUR_DB_HOST
# DATABASE_AUTH_TOKEN=YOUR_TOKEN

# Optional: force migrations to run at runtime (not recommended on serverless).
# Default behavior:
# - file: DB → auto-migrate on startup
# - remote DB → skip auto-migrate; run migrations in CI/CD with drizzle-kit
#
# RUN_MIGRATIONS=1

